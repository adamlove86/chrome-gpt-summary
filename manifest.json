{
  "manifest_version": 3,
  "name": "Summarise with GPT-4o",
  "version": "1.1",
  "description": "Copies text from the page or YouTube transcript and summarises it using the ChatGPT API.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.openai.com/",
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "summarise.png"
  },
  "options_page": "options.html",
  "icons": {
    "48": "summarise.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
