{
  "manifest_version": 3,
  "name": "Summarise with ChatGPT",
  "version": "1.1",
  "description": "Copies text from the page or YouTube transcript and summarises it using the ChatGPT API.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.openai.com/",
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["youtubeTranscript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}